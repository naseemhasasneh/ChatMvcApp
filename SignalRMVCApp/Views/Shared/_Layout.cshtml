        <div class="d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/">SignalR Chat</a>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white me-2">Hello, @User.Identity.Name!</span>
                    <form method="post" action="/Identity/Account/Logout" class="d-inline">
                        <button class="btn btn-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-primary btn-sm me-2" href="/Identity/Account/Login">Login</a>
                    <a class="btn btn-secondary btn-sm" href="/Identity/Account/Register">Register</a>
                }
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SignalRMVCApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
